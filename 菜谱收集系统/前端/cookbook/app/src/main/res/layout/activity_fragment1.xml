<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homeback2"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:textStyle="italic"
            android:text="热门菜品"
            android:textColor="#B22222"
            android:typeface="sans"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="98dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView5"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/icon1" tools:layout_editor_absoluteY="260dp"
            tools:layout_editor_absoluteX="122dp" android:id="@+id/imageView2"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp">
        <HorizontalScrollView
            android:background="@drawable/textview_border"
            android:layout_width="380dp"
            android:layout_height="120dp"
            tools:layout_editor_absoluteY="140dp"
            tools:layout_editor_absoluteX="15dp">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageButton
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/tofu"
                    tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:id="@+id/imageButton1"/>
                <ImageButton
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/gbchicken"
                    tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:id="@+id/imageButton2"/>
                <ImageButton
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/colachicken"
                    tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:id="@+id/imageButton3"/>
                <ImageButton
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/tcpg"
                    android:id="@+id/imageButton4"/>
                <ImageButton
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/tiramisu"
                    tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:id="@+id/imageButton5"/>
                <ImageButton
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/fqnoodle"
                    tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="16dp"
                    android:id="@+id/imageButton6"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:textStyle="italic"
            android:text="今日推荐"
            android:textColor="#A0522D"
            android:typeface="sans"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="275dp"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/textView6"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon2"
            android:id="@+id/Button111"/>
    </LinearLayout>
    <ScrollView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="326dp"
        android:layout_height="800dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:background="@drawable/textview_border"
            android:text="TextView"
            android:layout_width="320dp"
            android:layout_height="420dp"
            android:id="@+id/TextView11"/>
    </LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>